# Personal Development Environment - Core Zsh Configuration
# Generated by Ansible for {{ ansible_facts['user_id'] }} on {{ ansible_facts['date_time']['date'] }}
# Platform: {{ ansible_facts['os_family'] }}

{% if ansible_facts['os_family'] == "Darwin" %}
# Kiro CLI pre block. Keep at the top of this file.
[[ -f "${HOME}/Library/Application Support/kiro-cli/shell/zshrc.pre.zsh" ]] && builtin source "${HOME}/Library/Application Support/kiro-cli/shell/zshrc.pre.zsh"
{% endif %}

# Auto-load numbered configuration snippets (languages, tools, user configs)
# Uses zsh native globbing with numeric sorting for controlled loading order
# This will automatically load conf_10_zinit.zsh and other numbered configs
for config_file in ~/.config/zsh/conf_<->_*.zsh(N); do
    [[ -r "$config_file" ]] && source "$config_file"
done

# Initialize completions
autoload -Uz compinit && compinit
zstyle ':completion:*' menu select

{% if ansible_facts['os_family'] == "Darwin" %}
# Kiro CLI post block. Keep at the bottom of this file.
[[ -f "${HOME}/Library/Application Support/kiro-cli/shell/zshrc.post.zsh" ]] && builtin source "${HOME}/Library/Application Support/kiro-cli/shell/zshrc.post.zsh"
{% endif %}

# Terminal integration
[[ "$TERM_PROGRAM" == "kiro" ]] && . "$(kiro --locate-shell-integration-path zsh)"
