# Personal Development Environment - Terraform Configuration
# Terraform completion setup

# Check if terraform is installed before setting up completion
if command -v terraform >/dev/null 2>&1; then
    # Initialize zsh completion system first
    autoload -Uz compinit && compinit
    autoload -U +X bashcompinit && bashcompinit
{% if ansible_os_family == "Darwin" %}
    complete -o nospace -C {{ brew_prefix }}/bin/terraform terraform
{% else %}
    complete -o nospace -C terraform terraform
{% endif %}
fi
