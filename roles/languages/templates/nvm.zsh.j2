# Personal Development Environment - NVM Configuration
# Node.js Version Manager - Updated for Q CLI MCP server compatibility

export NVM_DIR="${HOME}/.nvm"

# Load NVM immediately for MCP server compatibility
# Q CLI MCP servers need Node.js to be available at shell startup
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

# Ensure Node.js 22.19.0 is used by default for MCP compatibility
nvm use 22.19.0 > /dev/null 2>&1
